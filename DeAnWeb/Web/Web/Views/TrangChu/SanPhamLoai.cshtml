@{
    ViewBag.Title = "SanPhamLoai";
    Layout = "~/Views/Shared/_LayoutPageConLai.cshtml";
}

@using Web.Models;
@model List<sanPham>

<div class="container" style="margin-top:20px">
      <div class="product-group">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="card card-product mb-3">
                       <a href="@Url.Action("ChiTietSanPham" ,new { ms= @item.maSP})"> <img class="card-img-top" style="width:100%;height:200px" src="~/Content/image/@item.hinhanh" />  </a>
                        <div class="card-body">
                            <p class="card-title"><a href="@Url.Action("ChiTietSanPham" ,new { ms= @item.maSP})">  @item.tenSP </a> </p>                             
                                <br /> @item.dongia
                            <br />
                           @* @Url.Action("chitietsp" ,new { ms= @item.MaSach})*@
                           @* @Url.Action("ThemGioHang","GioHang" ,new { ms= @item.MaSach })*@
                            <a class="btn btn-success" href="@Url.Action("ThemGioHang","GioHang",new { ms= @item.maSP })"> Chọn mua</a>
                        </div>
                    </div>
                </div> 
            }
        </div>
    </div>
</div>
<div class="container " style="margin-top:20px">
    
        <div class="row">
            <div class="col_md-3">
                <a class="btn btn-block  btn-outline-info" href="@Url.Action("HienThiNhomView")"" style="width:100px ; height:50px;margin-right:20px;">Quay lại</a>
            </div>
            <div class="col-md-4">
                 <a class="btn btn-block  btn-outline-info" href="@Url.Action("SanPham")" style="width:250px ; height:50px">Xem toàn bộ sản phảm</a>
            </div>
        </div>      
    
</div>
