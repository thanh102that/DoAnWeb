@{
    ViewBag.Title = "xoaLoai";
    Layout = "~/Views/Shared/_LayoutPageConLai.cshtml";
}

@using Web.Models;
@model Loai

<div class="container-fluid">
    <div class="row" style="margin-top:20px; margin-bottom:20px; background-color:#0ff">
        <div class="container">
            <label style="text-align:center ;font-size:50px;font-family:cursive"> Xóa Loại</label>
        </div>        
    </div>
</div>


<<div class="container" style="margin-top:30px"> 
    <div class="row" style="margin-top:20px">
  
        <div class="col-md-6">
             <p style="text-align:left ;font-weight:bold;font-size:25px"> Mã Nhóm: @Model.maNhom   </p>    
             <p style="text-align:left ;font-weight:bold;font-size:25px"> Mã Loại: @Model.maLoai   </p>            
          <p style="text-align:left ;font-weight:bold;font-size:25px"> Tên Loại: @Model.tenloai   </p>    
           
        </div>
        @using (Html.BeginForm()) {
        <div class="row">
            <div class="col-md-6" > 
                 <input type="submit" value="Xóa Loại" class="btn btn-outline-success btn-block" style="width:200px; height:50px; margin-bottom:20px; margin-top:20px"/>
            </div>
              <div class="col-md-6">
                  <a class="btn btn-outline-success btn-block" style="width:200px; height:50px; margin-bottom:20px; margin-top:20px" href="@Url.Action("TrangQuanLyLoai","QuanLyLoai")">Quay Lại</a>
              </div>                       
        </div>
          
        
        }
    </div>
</div>
