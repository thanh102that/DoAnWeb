@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutPageConLai.cshtml";
}


<div class="container" style="margin-top: 30px;">
    <div class="row">
        <div class="col-md-6">
            <h3>Xin chào!</h3>
            <h3>Chúc bạn một ngày tốt lành!</h3>
            <br />
            <br />
            <form action="@Url.Action("XLDangNhap")" method="post">
                <div class="form-group" style="border: medium">
                    <div @*class=" col-md-4"*@ style="text-align: left">
                        <label>Tên Đăng Nhập</label>
                    </div>

                    <div @*class="form-group col-md-8"*@>
                        <input class="form-control" name="txtTenDN" type="text" placeholder="Nhập Tên Đăng Nhập"/>
                    </div>
                </div>
                <div class="form-group" style="border: medium">
                    <div  style="text-align: left">
                        <label>Mật Khẩu</label>
                    </div>
                    <div >
                        <input class="form-control" name="txtMatKhau" type="text" placeholder="Nhập Mật Khẩu" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3" style="text-align: left">
                    </div>
                    <div class="form-group col-md-9">
                        <input name="btnSubmit" type="submit" class="btn btn-primary" value="Đăng nhập " />
                    </div>

                </div>
                   <div class="form-group" style="border: medium">
                    <div  style="text-align: left">
                         <a class="nav-link" href="@Url.Action("DangKy","DangKy")">.Nếu bạn chưa có tài khoản,đăng ký tại đây.</a>
                    </div>
                   
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <img src="~/Content/Image/chayyyyy.JPG" />
        </div>
    </div>
</div>

